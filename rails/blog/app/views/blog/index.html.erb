<% if notice %>
  <p id="notice"><%= notice %> </p>
<% end %>
<h2>Posts list</h2>
<% @posts.each do |post| %>
  <div class="entry">
    <%= image_tag(post.image_url)%>
    <h3><%= post.title %></h3>
    <p class="date"><%= post.date %></p>
    <p class="intro"><%= sanitize(post.introduction) %></p>
  </div>
<% end %>
