<% if notice %>
  <p id="notice"><%= notice %> </p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<% @posts.each do |post| %>
  <div class="entry">
    <%= image_tag(post.image_url)%>
    <h3><%= post.title %></h3>
    <%= sanitize(post.introduction) %>
    <div class="date_line">
      <span class="date"><%= post.date %></span>
    </div>
  </div>
<% end %>
